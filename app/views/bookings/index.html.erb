<div class="page-container-bookings">
  <h2 class="page-main-header">Bookings</h2>
    <p>Welcome back,  <%= current_user.name.titleize %> 👋🏻</p>
    <div class="bookings">
    <div>
      <h3 class="page-tertiary-header">Upcoming Bookings</h3>
        <% @my_bookings.each do |booking| %>
        <% if Date.today < booking.end_date %>
          <%= render 'life_booking_card', booking:booking %>
          <% end %>
      <% end %>
  </div>
<div>
   <h3 class="page-tertiary-header">Past Bookings</h3>
    <% @my_bookings.each do |booking| %>
      <% if Date.today > booking.end_date %>
        <%= render 'life_booking_card', booking:booking %>
        <% end %>
    <% end %>
  </div>
  <div>
    <h3 class="page-tertiary-header">See who has booked your life</h3>
    <% if @my_rentals.empty? %>
    <p>Nobody has booked your life yet</p>
    <% else %>
      <% @my_rentals.each do |life| %>
      <%= render "bookingcard", life:life %>
      <% end %>
    <% end %>
</div>
</div>
</div>
<%# where life_id = current.user %>
