<div class="lifecard mb-1 my-3">
<%= link_to life.name, life_path(life.id)  %><br>
    <%= life.details %>
    <% @reviews = Review.where(life_id: life.id) %>
    <% ratings = [] %>
    <% @reviews.each do |review| %>
      <% ratings << review.rating.to_i %>
    <% end %>
     <%= ratings.sum.fdiv(ratings.size) %>
</div>
